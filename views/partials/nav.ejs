<script>
  function deleteAccount(userId) {
    if (confirm('Are you sure? This will delete your account and all your blogs permanently.')) {
      fetch(`/user/${userId}`, { method: 'DELETE' })
        .then(res => res.json())
        .then(data => {
          alert(data.message || data.error);
          if (data.message) window.location.href = '/';
        })
        .catch(err => alert('Error deleting account'));
    }
  }
</script>